{
  "name": "@shadeprotocol/shadejs",
  "description": "The Typescript SDK for Shade Protocol",
  "version": "1.7.0",
  "author": "Secure Secrets",
  "bugs": {
    "url": "https://github.com/securesecrets/shadejs/issues"
  },
  "repository": {
    "url": "https://github.com/securesecrets/shadejs"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "default": "./dist/shadejs.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "release": "tsc && vite build && changeset publish",
    "commitizen": "cz",
    "lint": "eslint \"**/*.{ts,js}\"",
    "lint:fix": "eslint \"**/*.{vue,ts,js}\" --fix",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "bignumber.js": "^9.1.2",
    "rxjs": "^7.8.2",
    "secretjs": "1.15.1",
    "vite": "^6.2.3",
    "whatwg-fetch": "^3.6.19"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^4.2.5",
    "eslint-plugin-import": "^2.28.1",
    "lefthook": "^1.11.5",
    "typescript": "^5.8.2",
    "vite-plugin-dts": "^4.5.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.9"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
